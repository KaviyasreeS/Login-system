@page
@model HospitalSystemAPI.Pages.SignupModel
<form method="post">
    <input asp-for="Patient.Name" placeholder="Name" />
    <input asp-for="Patient.Email" placeholder="Email" />
    <input asp-for="Patient.PhoneNumber" placeholder="Phone" />
    <input asp-for="Patient.Password" placeholder="Password" type="password" />
    <button type="submit">Register</button>
</form>
<p>@Model.Message</p>
